<RelativeLayout
    android:id="@+id/movie_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:clickable="true"
    android:layout_margin="@dimen/margin_between_detail_box"
    android:paddingBottom="@dimen/video_box_margin"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/movie_detail_video_thumbnail"
        android:layout_width="@dimen/video_list_size"
        android:layout_height="@dimen/video_list_size"
        android:src="@drawable/dummytrailer"
        android:alpha="0.8"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="@dimen/video_list_play_ic_size"
        android:layout_height="@dimen/video_list_play_ic_size"
        android:src="@drawable/ic_youtube_64"
        android:alpha="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
